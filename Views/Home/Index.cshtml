@{
    ViewData["Title"] = "Management Dashboard";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h1 class="display-4">Contoso University Administration</h1>
                    <p class="lead">Welcome to the university management system</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h3 class="card-title">Students</h3>
                    <p class="card-text">Manage student enrollments, view student details, and track academic progress.</p>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <a asp-controller="Students" asp-action="Index" class="btn btn-primary">Manage Students</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h3 class="card-title">Courses</h3>
                    <p class="card-text">Manage course offerings, schedules, assignments, and course materials.</p>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <a asp-controller="Courses" asp-action="Index" class="btn btn-primary">Manage Courses</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h3 class="card-title">Instructors</h3>
                    <p class="card-text">Manage faculty information, teaching assignments, and department affiliations.</p>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <a asp-controller="Instructors" asp-action="Index" class="btn btn-primary">Manage Instructors</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h3 class="card-title">Departments</h3>
                    <p class="card-text">Manage academic departments, budgets, and administrative assignments.</p>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <a asp-controller="Departments" asp-action="Index" class="btn btn-primary">Manage Departments</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h3 class="card-title">Reports</h3>
                    <p class="card-text">Generate academic reports, enrollment statistics, and performance analytics.</p>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <a href="#" class="btn btn-primary">View Reports</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h3 class="card-title">Settings</h3>
                    <p class="card-text">Configure system settings, user permissions, and application preferences.</p>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <a href="#" class="btn btn-primary">System Settings</a>
                </div>
            </div>
        </div>
    </div>
</div> 